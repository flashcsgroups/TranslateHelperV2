<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Application theme.<style name="MyTheme" parent="@android:style/Theme.Holo"> -->
  <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
    <item name="android:background">@color/blue_background</item>
  </style>
  <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar">
    <item name="android:background">@color/blue_background</item>
    <item name="android:textSize">5sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="MyTheme.Splash" parent ="@android:style/Theme.Holo.Light">
    <item name="android:windowBackground">@drawable/SplashScreen</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="MainButton">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:minWidth">150dp</item>
    <item name="android:minHeight">130dp</item>

    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:radius">5dp</item>
  </style>

  <style name="VariantItemTextView">
    <item name="android:textSize">20sp</item>
    <item name="android:padding">4dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="VariantHeaderTextView">
    <item name="android:textSize">30dip</item>
    <item name="android:padding">5dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@color/lightgrey</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="FavoritesDeletedItemTextView">
    <item name="android:textSize">10dip</item>
    <item name="android:padding">5dp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@color/lightgrey</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="TestSelectWordsButtonSubmit">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">50</item>
    <item name="android:padding">10dp</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">20dip</item>
    <item name="android:shape">rectangle</item>
    <item name="android:radius">10dip</item>
  </style>

  <style name="FinalTestAlertDialogStyle" parent="@android:style/Theme.Holo.NoActionBar">
    <!-- Used for the buttons -->
    <!--item name="colorAccent">#FFC107</item-->
    <!-- Used for the title and text -->
    <item name="android:textColorPrimary">@color/black</item>
    <!-- Used for the background -->
    <item name="android:background">@color/blue_background</item>
  </style>

  <style name="mainPageButtonLayout">
    <item name="android:orientation">vertical</item>
    <item name="android:background">@drawable/BorderMainPage</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:paddingLeft">30dp</item>
    <item name="android:paddingRight">30dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>
  <style name="mainPageButtonText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:textSize">15dp</item>
  </style>
  <style name="mainPageButtonImage">
    <item name="android:layout_width">80dp</item>
    <item name="android:layout_height">80dp</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:scaleType">fitCenter</item>
  </style>
  
</resources>