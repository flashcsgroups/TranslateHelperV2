<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Application theme.<style name="MyTheme" parent="@android:style/Theme.Holo"> -->
  <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/MyActionBar</item>
  </style>
  <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar">
    <item name="android:background">#B2DFDB</item>
    <item name="android:textSize">25sp</item>
    <item name="android:textColor">#ffffff</item>
  </style>

  <style name="MyTheme.Splash" parent ="@android:style/Theme.Holo.Light">
    <item name="android:windowBackground">@drawable/SplashScreen</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="MainButton">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:minWidth">150dp</item>
    <item name="android:minHeight">130dp</item>

    <item name="android:layout_marginRight">5dp</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginTop">5dp</item>
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:radius">5dp</item>
  </style>

  <style name="VariantItemTextView">
    <item name="android:textSize">20sp</item>
    <item name="android:padding">4dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="VariantHeaderTextView">
    <item name="android:textSize">30dip</item>
    <item name="android:padding">5dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@color/lightgrey</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="FavoritesDeletedItemTextView">
    <item name="android:textSize">10dip</item>
    <item name="android:padding">5dp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@color/lightgrey</item>
    <item name="android:background">@color/transparent</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="TestSelectWordsButtonSubmit">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">50</item>
    <item name="android:padding">10dp</item>
    <item name="android:background">#E3F2FD</item>
    <item name="android:layout_margin">10dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">20dip</item>
  </style>

</resources>