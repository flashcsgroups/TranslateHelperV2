<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/transparent">
    <ImageView
        android:id="@+id/list_bubble_userView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/bender1"
        android:gravity="left|top" />
    <LinearLayout
        android:id="@+id/list_bubble_robotMessage"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/BubbleChatUserSelector"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:clickable="false">
        <TextView
            android:id="@+id/OriginalTextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:text="original"
            android:padding="4dp"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:layout_marginRight="5dp" />
        <TextView
            android:id="@+id/OriginalTextTranscriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:text="transcription"
            android:padding="4dp"
            android:textColor="@color/lightgrey"
            android:background="@color/transparent"
            android:layout_marginRight="5dp" />
        <TextView
            android:id="@+id/PosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:text="pos"
            android:padding="4dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:background="@color/transparent" />
    </LinearLayout>
    <TextView
        android:id="@+id/list_bubble_userMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="230dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="My text"
        android:background="@drawable/BubbleChatUserSelector"
        android:textColor="@color/black" />
    <ImageView
        android:id="@+id/list_bubble_robotView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/bender1"
        android:gravity="right" />
</LinearLayout>