<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dictList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:gravity="fill">
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/fromPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:gravity="left|center">
        <TextView
            android:gravity="left|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:text="АНГЛИЙСКИЙ"
            android:background="@color/transparent"
            android:id="@+id/fromTextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/listInputString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="24dp"
        android:layout_weight="2"
        android:gravity="center">
        <EditText
            android:layout_weight="1"
            android:id="@+id/textSourceString"
            android:hint="Строка для перевода"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minLines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:lineSpacingExtra="0dp"
            android:scrollbars="none"
            android:textSize="20sp" />
        <ImageButton
            android:id="@+id/buttonChangeDest"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:src="@drawable/change" />
        <ImageButton
            android:id="@+id/buttonTranslate"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:src="@drawable/v2search" />
    </LinearLayout>
    <TextView
        android:gravity="left|center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:textSize="15sp"
        android:text="РУССКИЙ"
        android:background="@color/transparent"
        android:id="@+id/toTextView" />
    <ScrollView
        android:id="@+id/scrollViewTranslateResultsDefs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="94"
        android:fillViewport="true">
        <AbsoluteLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>
<!--TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="30dip"
            android:text="Готов что-нибудь перевести!"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:id="@+id/splashTextView" /-->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:weightSum="100"
        android:minHeight="24dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center|right">
        <ImageButton
            android:id="@+id/buttonNew"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@color/blue50"
            android:layout_weight="100"
            android:scaleType="fitCenter"
            android:gravity="center"
            android:src="@drawable/v3cleartext" />
    </LinearLayout>
</LinearLayout>