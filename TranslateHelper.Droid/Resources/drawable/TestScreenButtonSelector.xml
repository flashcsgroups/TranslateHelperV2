      <corners android:radius="5dip" />
      <stroke android:width="1dip" android:color="#000000" />
      <solid android:color="#BBDEFB"/>
      <!--gradient android:angle="-90" android:startColor="#BBDEFB" android:endColor="#2196F3"  />-->
